{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-DDEBUG",
                "-std=c++14",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/main.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}